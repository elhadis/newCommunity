
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20sp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="28dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:id="@+id/house_display_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apartment Description"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@+id/house_display_image"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/house_display_description"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apartment Price"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/house_display_description"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/house_display_price"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent place"
        android:textAlignment="center"
        android:layout_below="@+id/house_display_price"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/house_display_place"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textAlignment="center"
            android:layout_below="@+id/house_display_place"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/house_display_phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_below="@+id/house_display_phone"
            android:textColor="@color/colorPrimary"
            android:id="@+id/house_display_date"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>