<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="37dp"
    android:orientation="vertical"

    android:layout_margin="10dp"
    tools:context=".PostApartmentActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartment InFormation"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/btn_picture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_marginTop="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera"
            android:text="Click For Picture"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:text="Click Camera Icon For Picture"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apartment Description"
        android:id="@+id/apartment_description"
        android:layout_marginTop="7dp"
        android:textColorHint="@android:color/black"
        android:textSize="13sp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apartment Place"
        android:id="@+id/apartment_city"
        android:layout_marginTop="7dp"
        android:textColorHint="@android:color/black"
        android:textSize="13sp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rent Price"
        android:id="@+id/apartment_price"
        android:layout_marginTop="7dp"
        android:textColorHint="@android:color/black"
        android:textSize="13sp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:id="@+id/apartment_phone"
        android:layout_marginTop="7dp"
        android:textColorHint="@android:color/black"
        android:textSize="13sp"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:text="Submit"
        android:id="@+id/apartment_Post"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/black"

        android:textSize="27sp"
        android:textAllCaps="false"
        android:gravity="center"/>


</LinearLayout>